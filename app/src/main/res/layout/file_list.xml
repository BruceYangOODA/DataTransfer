<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_backward"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/btn_backward"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_column_height"
            android:gravity="start"
            android:layout_weight="1"
            android:background="@color/DimGray"
            android:text="TYPE"/>
        <TextView
            android:layout_marginRight="@dimen/item_margin_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_column_height"
            android:layout_weight="2.2"
            android:background="@color/SlateGray"
            android:text="NAME"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvFileList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>